@model Capa_Presentacion.Models.Consulta

@{
    ViewBag.Title = "Agregar";
    string Rol = System.Web.HttpContext.Current.Session["Rol"] as String;
    if (Rol == "Administrador")
    {
        Layout = "~/Views/Shared/_Administrador.cshtml";
    }
    else if (Rol == "Editar Consulta")
    {
        Layout = "~/Views/Shared/_EditarConsulta.cshtml";
    }
}

@using (Html.BeginForm("Agregar", "Consulta", FormMethod.Post, new { role="form", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="content">
        <div class="form-horizontal">
            <h4 class="principal-texto">AGREGAR CONSULTA</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="box box-primary">
                <div class="col-lg-12">
                    <h6 class="principal-texto">DATOS DEL SOLICITANTE</h6>
                    <div class="box box-danger">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.NombreSolicitante)
                                    @Html.EditorFor(model => model.NombreSolicitante, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NombreSolicitante, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.ApellidoSolicitante1)
                                    @Html.EditorFor(model => model.ApellidoSolicitante1, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ApellidoSolicitante1, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.ApellidoSolicitante2)
                                    @Html.EditorFor(model => model.ApellidoSolicitante2, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ApellidoSolicitante2, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.Telefono)
                                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.Email)
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.GeneroSolicitante)
                                    @Html.DropDownListFor(model => model.GeneroSolicitante, (SelectList)ViewBag.genero, "Seleccione", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.GeneroSolicitante, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <h6 class="principal-texto">DATOS DE LA SOLICITUD</h6>
                    <div class="box box-warning">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.Asunto)
                                    @Html.EditorFor(model => model.Asunto, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Asunto, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.Descripcion)
                                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.Respuesta)
                                    @Html.EditorFor(model => model.Respuesta, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Respuesta, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <label>Documento</label>
                                    <div class="input-group input-file" name="ArchivoFile">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default btn-choose" type="button">Buscar</button>
                                        </span>
                                        <input type="text" name="Archivo" class="form-control" placeholder="Seleccione un archivo..." />
                                    </div>
                                </div>
                            </div>
                            <input type="file" class="input-ghost" style="visibility:hidden; height:0;" name="Archivo" id="Archivo" accept="application/x-pkcs12">

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.MetodoIngreso)
                                    @Html.EditorFor(model => model.MetodoIngreso, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MetodoIngreso, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.FechaIngreso)
                                    @Html.EditorFor(model => model.FechaIngreso, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FechaIngreso, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.FechaRespuesta)
                                    @Html.EditorFor(model => model.FechaRespuesta, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FechaRespuesta, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    @Html.LabelFor(model => model.Estado)
                                    @Html.DropDownListFor(model => model.Estado, (SelectList)ViewBag.estados, "Seleccione", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="principal-texto">
                    @Html.ActionLink("Cancelar", "Index", "Consulta", null, new { @class = "btn btn-danger" })
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>

}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script>
    function bs_input_file() {
        $(".input-file").before(
            function () {
                if (!$(this).prev().hasClass('input-ghost')) {
                    var element = $("#Archivo");
                    element.attr("name", $(this).attr("name"));
                    element.change(function () {
                        element.next(element).find('input').val((element.val()).split('\\').pop());
                    });
                    $(this).find("button.btn-choose").click(function () {
                        element.click();
                    });
                    $(this).find('input').css("cursor", "pointer");
                    $(this).find('input').mousedown(function () {
                        $(this).parents('.input-file').prev().click();
                        return false;
                    });
                    return element;
                }
            }
        );
    };

    $(function () {
        bs_input_file();
    });

</script>