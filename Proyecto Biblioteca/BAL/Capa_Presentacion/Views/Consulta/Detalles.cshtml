@model Capa_Presentacion.Models.Consulta

@{
    ViewBag.Title = "Detalles";
    string Rol = System.Web.HttpContext.Current.Session["Rol"] as String;
    if (Rol == "Administrador")
    {
        Layout = "~/Views/Shared/_Administrador.cshtml";
    }
    else if (Rol == "Administrador Consultas")
    {
        Layout = "~/Views/Shared/_AdministradorConsulta.cshtml";
    }
    else if (Rol == "Editar Consultas")
    {
        Layout = "~/Views/Shared/_EditarConsulta.cshtml";
    }
    else if (Rol == "Consultar")
    {
        Layout = "~/Views/Shared/_Consultar.cshtml";
    }
    else
    {
      
    }
}

<div class="content">
    <div>
        <h4 class="principal-texto">DETALLES CONSULTA</h4>
        <div class="box box-primary">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <h6 class="principal-texto">DATOS DEL SOLICITANTE</h6>
                    <div class="box box-danger">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.NombreSolicitante)
                            @Html.EditorFor(model => model.NombreSolicitante, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.ApellidoSolicitante1)
                            @Html.EditorFor(model => model.ApellidoSolicitante1, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.ApellidoSolicitante2)
                            @Html.EditorFor(model => model.ApellidoSolicitante2, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Telefono)
                            @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.GeneroSolicitante)
                            @Html.EditorFor(model => model.GeneroSolicitante, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h6 class="principal-texto">DATOS DEL USUARIO QUE LLEVA LA CONSULTA</h6>
                    <div class="box box-success">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.CedulaUsuario)
                            @Html.EditorFor(model => model.CedulaUsuario, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Nombre)
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Apellido1)
                            @Html.EditorFor(model => model.Apellido1, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Apellido2)
                            @Html.EditorFor(model => model.Apellido2, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <h6 class="principal-texto">DATOS DE LA SOLICITUD</h6>
                <div class="box box-warning">
                    <div class="col-lg-6">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.CodigoConsulta)
                            @Html.EditorFor(model => model.CodigoConsulta, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Asunto)
                            @Html.EditorFor(model => model.Asunto, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Descripcion)
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Respuesta)
                            @Html.EditorFor(model => model.Respuesta, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        @if (Model.NombreArchivo != null)
                        {
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.NombreArchivo)
                            <div class="input-group">
                                @Html.EditorFor(model => model.NombreArchivo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                <span class="input-group-btn">
                                    @Html.ActionLink("Descargar", "Descargar", "Consulta", Model, new { @class = "btn btn-success btn-flat" })
                                </span>
                            </div>
                        </div>
                        }
                    </div>
                    <div class="col-lg-6">
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.MetodoIngreso)
                            @Html.EditorFor(model => model.MetodoIngreso, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.FechaIngreso)
                            @Html.EditorFor(model => model.FechaIngreso, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.FechaRespuesta)
                            @Html.EditorFor(model => model.FechaRespuesta, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Estado)
                            @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                        <div class="col-lg-12">
                            @Html.LabelFor(model => model.Referido)
                            @Html.EditorFor(model => model.Referido, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <br />
                <div class="principal-texto">
                    @Html.ActionLink("Regresar", "Index", "Consulta", null, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
</div>

