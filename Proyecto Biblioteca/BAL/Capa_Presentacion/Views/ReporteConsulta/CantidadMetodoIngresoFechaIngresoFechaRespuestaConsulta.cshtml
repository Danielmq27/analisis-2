@model IEnumerable<Capa_Presentacion.Models.ReporteConsulta>

@{
    ViewBag.Title = "ReporteCantidadTipoUsuario";
    string Rol = System.Web.HttpContext.Current.Session["Rol"] as String;
    if (Rol == "Administrador")
    {
        Layout = "~/Views/Shared/_Administrador.cshtml";
    }
    else if (Rol == "Editar Consulta")
    {
        Layout = "~/Views/Shared/_EditarConsulta.cshtml";
    }
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div>
                <div class="box-header">
                    <h4 class="principal-texto">REPORTE DE LA CANTIDAD DE METODOS DE INGRESO</h4>
                    <h5 class="principal-texto">POR FECHAS DE INGRESO Y RESPUESTA</h5>
                </div>
                <!-- /.box-header -->
                <div class="box-body box box-warning">
                    <table id="example2" class="table table-bordered table-striped">
                        <thead style="background:rgba(128, 128, 128, .5)">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tipoMetodo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.porcentaje)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tipoMetodo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cantidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.porcentaje)%
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>
                                    @Html.ActionLink(" Descargar reporte", "ReporteMetodoIngresoFechaIngresoFechaRespuestaConsultaXLS", null, new { @class = "btn btn-success btn-sm fa fa-file-excel-o" }) |
                                    @Html.ActionLink(" Descargar reporte", "ReporteMetodoIngresoFechaIngresoFechaRespuestaConsultaPDF", null, new { @class = "btn btn-danger btn-sm fa fa-file-pdf-o" })
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

