@model IEnumerable<Capa_Presentacion.Models.ReportePP>

@{
    ViewBag.Title = "ReporteCantidadGenero";
    string Rol = System.Web.HttpContext.Current.Session["Rol"] as String;
    if (Rol == "Administrador")
    {
        Layout = "~/Views/Shared/_Administrador.cshtml";
    }
    else if (Rol == "Editar Servicios Bibliotecarios")
    {
        Layout = "~/Views/Shared/_EditarSB.cshtml";
    }
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div>
                <div class="box-header">
                    <h4 class="principal-texto">REPORTE DE LA CANTIDAD DE GÉNERO</h4>
                </div>
                <!-- /.box-header -->
                <div class="box-body box box-warning">
                    <table id="example2" class="table table-bordered table-striped">
                        <thead style="background:rgba(128, 128, 128, .5)">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tipoGenero)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.porcentaje)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tipoGenero)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cantidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.porcentaje)%
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>
                                    @Html.ActionLink(" Descargar reporte", "ReporteGeneroFechaIngresoPPXLS", null, new { @class = "btn btn-success btn-sm fa fa-file-excel-o" }) |
                                    @Html.ActionLink(" Descargar reporte", "ReporteGeneroFechaIngresoPPPDF", null, new { @class = "btn btn-danger btn-sm fa fa-file-pdf-o" })
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
