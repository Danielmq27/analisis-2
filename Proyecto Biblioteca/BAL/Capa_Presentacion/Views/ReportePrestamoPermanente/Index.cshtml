@model IEnumerable<Capa_Presentacion.Models.ReportePP>

@{
    ViewBag.Title = "CantidadTipoUsuario";
    string Rol = System.Web.HttpContext.Current.Session["Rol"] as String;
    if (Rol == "Administrador")
    {
        Layout = "~/Views/Shared/_Administrador.cshtml";
    }
    else if (Rol == "Administrador Servicios Bibliotecarios")
    {
        Layout = "~/Views/Shared/_AdministradorSB.cshtml";
    }
    else if (Rol == "Editar Servicios Bibliotecarios")
    {
        Layout = "~/Views/Shared/_EditarSB.cshtml";
    }
}
<div class="content">
    @Html.Raw(TempData["msg"])
    <h4 class="principal-texto">REPORTERIA DE PRÉSTAMOS PERMANENTES</h4>
    <br>
    <div class="box-body box box-success">
        <div class="row col-lg-6">
            <!--REPORTES DE CANTIDAD DE USUARIOS-->
            <h4 class="principal-texto">Reportes de cantidad de despachos por fechas</h4>
            <div class="col-lg-12">
                <form action="@Url.Action("CantidadDespachoFechaIngresoPP", "ReportePrestamoPermanente")" id="frm" method="post">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <h4 class="titulo-reporte">Reporte por fechas de ingreso</h4>
                        </div>
                    </div>
                    <div class="form-group has-feedback col-lg-12">
                        <label>Fecha Ingreso</label>
                        <input type="date" class="form-control" id="Fecha1" name="Fecha1" autocomplete="off" required>
                    </div>
                    <div class="form-group has-feedback col-lg-12">
                        <label>Fecha Ingreso</label>
                        <input type="date" class="form-control" id="Fecha2" name="Fecha2" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-success btn-block btn-flat">Generar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row col-lg-6">
            <!--REPORTES DE GENERO-->
            <h4 class="principal-texto">Reportes de cantidad de genero de usuarios por fechas</h4>
            <div class="col-lg-12">
                <form action="@Url.Action("CantidadGeneroFechaIngresoPP", "ReportePrestamoPermanente")" id="frm" method="post">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <h4 class="titulo-reporte">Reporte por fechas de ingreso</h4>
                        </div>
                    </div>
                    <div class="form-group has-feedback col-lg-12">
                        <label>Fecha Ingreso</label>
                        <input type="date" class="form-control" id="Fecha1" name="Fecha1" autocomplete="off" required>
                    </div>
                    <div class="form-group has-feedback col-lg-12">
                        <label>Fecha Ingreso</label>
                        <input type="date" class="form-control" id="Fecha2" name="Fecha2" autocomplete="off" required>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-success btn-block btn-flat">Generar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

