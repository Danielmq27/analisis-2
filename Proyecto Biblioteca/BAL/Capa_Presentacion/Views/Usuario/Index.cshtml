@model IEnumerable<Capa_Presentacion.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Direccion.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div>
                <div class="box-header">
                    <h3 class="box-title">USUARIOS</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <a class="btn btn-success">
                        <span class="fa fa-plus"></span>
                    </a>
                    <p>
                        @Html.ActionLink("Crear Usuario", "Nuevo")
                    </p>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cedula)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IdRol)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cedula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                        @Html.DisplayFor(modelItem => item.Apellido1)
                                        @Html.DisplayFor(modelItem => item.Apellido2)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdRol)
                                    </td>
                                    <td>
                                        <a class="btn btn-primary">
                                            <span class="fa fa-edit"> Actualizar</span>
                                        </a> |
                                        <a class="btn btn-danger" style="background-color:#D1190A">
                                            <span class="fa fa-remove"> Eliminar</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
